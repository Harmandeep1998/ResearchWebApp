@page
@model ResearchWebApp.Pages.Issues.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center font1">Delete Paper Issue Details</h1>

<div>
    <h4>Are you sure you want to delete this  Paper Issue Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Paper Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.Paper.PaperName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue.MonthName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.MonthName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue.Volume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.Volume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue.IssueNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.IssueNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue.Authors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.Authors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue.PageNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue.PageNo)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Issue.Id" />
        <input type="submit" value="Delete Paper Issue" class="btn btn-danger" />
    </form>
</div>
