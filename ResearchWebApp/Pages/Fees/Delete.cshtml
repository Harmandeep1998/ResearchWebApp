@page
@model ResearchWebApp.Pages.Fees.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center font1">Delete Publication Fee Details</h1>

<div>
    <h4>Are you sure you want to delete this Publication Fee Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fee.Paper)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fee.Paper.PaperName)
        </dd>
        <dt class="col-sm-2">
            Publication Fee
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Fee.Amount)
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="Fee.Id" />
        <input type="submit" value="Delete Publication Fee Details" class="btn btn-danger" /> 
    </form>
</div>
