@page
@model ResearchWebApp.Pages.Papers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center font1">Add New Paper</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/images/research.png" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Paper.PaperName" class="control-label"></label>
                <input asp-for="Paper.PaperName" class="form-control" />
                <span asp-validation-for="Paper.PaperName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paper.ISSN" class="control-label"></label>
                <input asp-for="Paper.ISSN" class="form-control" />
                <span asp-validation-for="Paper.ISSN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Paper Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
